
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="breadcrumb breadcrumb_bg" style="position: relative; z-index: 1; background-color: #e8f0f2; margin-bottom: 0px !important;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p style="font-size: 15px; color: #777777;">Laptop / Cart</p>
                        <p style="font-size: 15px; color: #777777;">Hãy tạo tài khoản để có thể hưởng ưu đãi!</p>
                        <p style="font-size: 15px; color: #777777;">Tất cả sản phẩm đều đã bao gồm phí ship!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<br />
<div class="container">
    <div class="table-responsive">
        <table class="table">
            <tr>
                <th>Option</th>
                <th style="display:none;">Id</th>
                <th>Name</th>
                <th>Photo</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Sub Total</th>
            </tr>
            @foreach (var item in ViewBag.cart)
            {
                <tr>
                    <td><a asp-controller="CartnoLogin" asp-action="Remove" asp-route-id="@item.laptop.LaptopID">Remove</a></td>
                    <td style="display:none;">@item.laptop.LaptopID</td>
                    <td>@item.laptop.TenLaptop</td>
                    <td><img src="~/image/@item.laptop.HinhAnh" width="150" height="150" /></td>
                    <td>$@(item.laptop.Giatien)</td>
                    <td>@item.SoLuong</td>
                    <td>$@(item.laptop.Giatien * item.SoLuong + 15)</td>
                </tr>
            }
            <tr>
                <td align="right" colspan="5">Subtotal</td>
                <td>
                    @ViewBag.total
                </td>
            </tr>
        </table>
        <div class="checkout_btn_inner float-right">
            <a asp-controller="Home" asp-action="index" class="btn_1" style="display: inline-block; padding: 19px 61px; background-color: #0A98C0; font-size: 15px; font-weight: 700; -webkit-transition: 0.5s; transition: 0.5s; text-transform: capitalize; color: #fff;">Tiếp tục mua hàng</a>
            <a asp-action="CustomerDetails" asp-controller="CartnoLogin" class="btn_1 checkout_btn_1" style="display: inline-block; padding: 19px 61px; background-color: #0A98C0; font-size: 15px; font-weight: 700; -webkit-transition: 0.5s; transition: 0.5s; text-transform: capitalize; color: #fff;">Thanh toán</a>
        </div>
    </div>
</div>
