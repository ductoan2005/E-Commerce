    @section Scripts{
        @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
    <script>
        $(function () {
            $('#alertBox').removeClass('hide');
            $('#alertBox').delay(2000).slideUp(500);
        });
    </script>
</body>
</html>