    <!--Font Awesome-->
    <script src="https://kit.fontawesome.com/cd9cf4847b.js" crossorigin="anonymous"></script>
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Montserrat:300,400,500,600,700" rel="stylesheet">
    <!-- Vendor CSS Files -->
    <link href="~/user/css/checkout.css" rel="stylesheet">
    <link href="~/user/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/user/vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="~/user/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/user/vendor/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/user/vendor/venobox/venobox.css" rel="stylesheet">
    <link href="~/user/vendor/owl.carousel/assets/owl.carousel.min.css" rel="stylesheet">
    <!-- Template Main CSS File -->

    @{
        var theme = httpContextaccessor.HttpContext.Request.Cookies["theme"];

        if (theme == "Darkmode")
        {
        <link href="~/user/css/darkmode.css" rel="stylesheet">
        }
        if (theme == "None")
        {
        <link href="~/user/css/style.css" rel="stylesheet">
        }
        if (theme == null)
        {
        <link href="~/user/css/style.css" rel="stylesheet">
        }
    }

</head>
<body>
    <!-- ======= Header ======= -->
    <header id="header" class="header-inner-pages">
        <div id="topbar">
            <div class="container">
                <div class="social-links">
                    <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
