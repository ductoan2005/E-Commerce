@{
    ViewBag.Title = "Index Product Admin";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<html>
<h2>Trang Chủ</h2>
<body>
    <a asp-controller="Product" asp-action="Add" class="btn btn-success">Thêm Sản Phẩm</a>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" style="text-align:center">
                <thead>
                    <tr style="text-align:center">
                        <th>ID</th>
                        <th>Hình Ảnh</th>
                        <th>Tên Sản Phẩm</th>
                        <th>Giá Tiền</th>
                        <th>Tên Thương Hiệu</th>
                        <th>Số lượng</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.ds)
                    {
                        <tr>
                            <th>@item.LaptopID</th>
                            <th><img src="~/image/@item.HinhAnh" style="width:150px;height:100px" alt=""/></th>
                            <th>@item.TenLaptop</th>
                            <th>@item.Giatien</th>
                            <th>@item.ThuongHieu.TenThuongHieu</th>
                            <th>@item.SoLuong</th>
                            <th style="text-align:center">
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.LaptopID" class="btn btn-outline-danger">Xoá</a>
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.LaptopID" class="btn btn-outline-warning">Sửa</a>
                            </th>
                        </tr>
                    }

                </tbody>
            </table>
            <div style="text-align:center">
                @for (int i = 0; i < ViewBag.count; i++)
                {
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@i" class="btn btn-outline-primary">@i</a>
                    <a asp-controller="Product" asp-action="Index" asp-route-id="@(i+1)" class="btn btn-outline-primary">@(i+1)</a>
                }
            </div>

        </div>
    </div>
    
</body>
</html>