@model DoAn1.Models.KhachHang;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>
<form method="post" class="mt-3" enctype="multipart/form-data">
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TenKH" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TenKH" class="form-control">
            <span asp-validation-for="TenKH" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DienThoaiKH" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DienThoaiKH" class="form-control">
            <span asp-validation-for="DienThoaiKH" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="DiaChiKH" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="DiaChiKH" class="form-control">
            <span asp-validation-for="DiaChiKH" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TichDiem" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="TichDiem" class="form-control">
            <span asp-validation-for="TichDiem" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Hinh Anh</label>
        <div class="col-sm-10">
            <input type="file" name="photo" class="form-control">
        </div>
    </div>
    @if (ViewBag.Status == 1)
    {
        <p class="text-warning">Record saved </p>
    }
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    </div>
</form>
